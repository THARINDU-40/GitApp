<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/btn_feren"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="170dp"
        android:layout_height="101dp"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@+id/et_value"
        tools:layout_editor_absoluteX="30dp">

        <RadioButton
            android:id="@+id/btn_celsius"
            android:layout_width="match_parent"
            android:layout_height="23dp"
            android:text="@string/btn_celsius" />

        <RadioButton
            android:id="@+id/btn_feren"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="@string/btn_feren" />
    </RadioGroup>

    <Button
        android:id="@+id/btn_b1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/btn_b1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup"
        app:layout_constraintVertical_bias="0.103"
        tools:layout_editor_absoluteX="30dp" />

    <EditText
        android:id="@+id/et_value"
        android:layout_width="234dp"
        android:layout_height="46dp"
        android:ems="10"
        android:hint="@string/et_value"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="80dp"
        tools:layout_editor_absoluteY="5dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="152dp"
        android:layout_height="40dp"
        android:layout_marginStart="76dp"
        android:layout_marginLeft="76dp"
        android:text="TextView"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_b1"
        app:layout_constraintStart_toEndOf="@+id/btn_b1" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:srcCompat="@drawable/temperature"
        tools:layout_editor_absoluteX="64dp" />

</androidx.constraintlayout.widget.ConstraintLayout>